html, body
  width 100%
  height 100%
  margin 0
  padding 0
  background-color #323232
  color #cbcbcb
  font-family "Noto Sans JP"

main
  width 70%
  margin auto

.timer
  text-align center
  font-size 128px
  letter-spacing 15px
  font-weight bold

.button-area
  text-align center
  margin 10px 0
  button
    background-color #717171
    border none
    color white
    font-size 24px
    padding 10px 24px
    border-radius 10px
    outline none
    &:hover
      background-color #525252

ul
  list-style none
  text-align center
  padding 0
  margin 0
  font-size 24px

  li
    padding 10px 0
    border-bottom #5d5d5d 1px solid